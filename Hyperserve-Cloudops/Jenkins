pipeline {
    agent any

    stages {
        stage('Pre-Check Docker') {
            steps {
                sh '''
                if ! command -v docker >/dev/null 2>&1; then
                    echo "Docker is NOT installed!"
                    exit 1
                fi
                docker --version
                '''
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t hyperserve-svc:3 .'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker rm -f hyperserve-svc || true
                docker run -d --name hyperserve-svc -p 12208:5000 hyperserve-svc:3
                '''
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed."
        }
        success {
            echo "Container is running on port 12208"
        }
    }
}
